<!DOCTYPE html>
<html lang="en">
{{> header}}
<body>
    <div class="container mt-3">
        {{#if products}}
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: yellow;">
                        <th>Title</th>
                        <th>Price</th>
                        <th>Thumbnail</th>
                    </tr>
                    {{#each products}}
                        <tr class="text-centered">
                            <td>{{title}}</td>
                            <td>{{price}}</td>
                            <td><img src="{{thumbnail}}" alt="" width="40px"></td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        {{else}}
            <h3 class="p-3" style="color: crimson; background-color: pink;">No data exists</h3>
        {{/if}}
        <a href="./productsb"><button class="btn btn-success mt-3 mb-5">Add new products</button></a>
    </div>
</body>
{{> footer}}