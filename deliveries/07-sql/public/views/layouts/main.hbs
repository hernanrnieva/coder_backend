<!DOCTYPE html>
<html lang="en">
{{> header}}
<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h2 style="color: blue">Insert product data</h2>
            <br>
            <form onsubmit="return addProduct(this)">
                <div class="form-group">
                    <label for="title"><b>Title</b></label>
                    <input id="title" class="form-control" type="text" name="title" required/>
                </div>
                <div class="form-group">
                    <label for="price"><b>Price</b></label>
                    <input id="price" class="form-control" type="text" name="price" required/>
                </div>
                <div class="form-group">
                    <label for="thumbnail"><b>Thumbnail</b></label>
                    <input id="thumbnail" class="form-control" type="text" name="thumbnail" required/>
                </div>
                <button class="btn btn-success mt-3 mb-5">Submit</button>
            </form>
            <div id="products"></div>
            <h2 class="mt-4 mb-4" style="color: blue">Live chat</h2>
            <div id="messages"></div>
            <form class="mt-3" onsubmit="return addMessage(this)">
                <input required type="text" id="email" placeholder="Email">
                <input required type="text" id="text" placeholder="Message">
                <input type="submit" value="Send">
            </form>
        </div>
    </div>
</body>
{{> footer}}