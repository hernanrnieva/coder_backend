<div class="container mt-3">
    {{#if products}}
        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;">
                    <th>Title</th>
                    <th>Price</th>
                    <th>Thumbnail</th>
                </tr>
                {{#each products}}
                    <tr class="text-centered">
                        <td>{{title}}</td>
                        <td>{{price}}</td>
                        <td><img src="{{thumbnail}}" alt="" width="40px"></td>
                    </tr>
                {{/each}}
            </table>
        </div>
    {{else}}
        <h2 class="p-3" style="color: crimson; background-color: pink;">No data exists</h2>
    {{/if}}
</div>